        <th style="padding-left:68px;">Difficulty Level</th>
         &nbsp&nbsp&nbsp  &nbsp&nbsp&nbsp 
        <th style="padding-left:68px;">Marks</th>
        </tr>
@{   
foreach (var d in Model){
     <tr>
          &nbsp&nbsp&nbsp  &nbsp&nbsp&nbsp 
         <td  style="padding-left:68px;">@d.Title</td>
          &nbsp&nbsp&nbsp  &nbsp&nbsp&nbsp 
                 <td style="padding-left:68px;">
    
 @Html.ActionLink(d.DisplayName , "AssignmentSubmission", "StudentHome", new { id = d.AssignmentId }, d.AssignmentId)
 </td>
          &nbsp&nbsp&nbsp  &nbsp&nbsp&nbsp 
    <td style="padding-left:68px;">@d.Deadline</td>
          &nbsp&nbsp&nbsp   &nbsp&nbsp&nbsp
         <td style="padding-left:68px;">@d.DifficultyLevel</td>
          &nbsp&nbsp&nbsp  &nbsp&nbsp&nbsp 
          <td style="padding-left:68px;">@d.Marks</td>
        @* <td>  
             @d.DisplayName</td>*@
             </tr>

}
}
