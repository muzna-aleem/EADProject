@model List<Assignment6.Models.BO.Assignment>
@{
    ViewBag.Title = "Assignments";
    Layout = "~/Views/Shared/View1.cshtml";
}


<h1 align="center" >Assignments</h1>
<table class="tabStyle">
    <tr > &nbsp&nbsp&nbsp &nbsp&nbsp&nbsp 
        <th style="padding-left:68px;">Title</th>
